@model RecordStore.Data.EF.Format

@{
    ViewBag.Title = "Edit Format: " + @Model.FormatType;
}

<div id="rrWrapper">
    <div class="max600">
        <h2 class="text-center mb-5">@ViewBag.Title</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.FormatID)

                <div class="form-group">
                    <div class="col-md-12 text-center m-auto">
                        @Html.LabelFor(model => model.FormatType, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.FormatType, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.FormatType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center m-auto">
                        @Html.LabelFor(model => model.MultiFormat, htmlAttributes: new { @class = "control-label" })
                        <div class="checkbox">
                            @Html.CheckBoxFor(model => model.MultiFormat, new { data_toggle = "toggle", data_on = "Yes", data_off = "No" })
                            @Html.ValidationMessageFor(model => model.MultiFormat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center m-auto pt-2">
                        <input type="submit" value="Save Changes" class="btn btn-dark" />
                        @Html.ActionLink("Delete", "Delete", new { id = Model.FormatID }, new { @class = "btn btn-dark" })
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-dark">Cancel</a>
                        @*@Html.ActionLink("Cancel", "Index", "Format", null, new { @class = "btn btn-dark" })*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
