@model IEnumerable<RecordStore.Data.EF.Format>

@{
    ViewBag.Title = "Album Formats";
}

<div id="rrWrapper">

    <h2 class="text-center mb-5"> @ViewBag.Title</h2>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th class="text-left">
                    @Html.DisplayNameFor(model => model.FormatType)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.MultiFormat)
                </th>
                <th class="text-right">
                    @Html.ActionLink("Add New Format", "Create")
                    @*<a href="" class="FormatCreate">Add New Format</a>*@
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.FormatType)
                    </td>
                    <td class="text-center m-auto">
                        @*@Html.DisplayFor(modelItem => item.MultiFormat)*@
                        @if (item.MultiFormat == true)
                        {<span>Yes</span>}
                        else
                        { <span>No</span>}
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Edit", "Edit", new { id = item.FormatID }) |
                        @*<a href="" class="FormatEdit">Delete</a>*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.FormatID })
                        @*<a href="" class="FormatDelete">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Placeholders for the creating, deleting, & editing Formats in a dialog box *@
    <div id="FormatCreate"></div>
    <div id="FormatDelete"></div>
    <div id="FormatEdit"></div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}