@*@model IEnumerable<RecordStore.Data.EF.Album>*@
@model PagedList.IPagedList<RecordStore.Data.EF.Album>
@using PagedList.Mvc


@{
    ViewBag.Title = "Home";
}

<!-- Banner Starts Here -->
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-01">
            <div class="text-content">
                <h4>Best Offer</h4>
                <h2>New Arrivals On Sale</h2>
            </div>
        </div>
        <div class="banner-item-02">
            <div class="text-content">
                <h4>Flash Deals</h4>
                <h2>Get your best products</h2>
            </div>
        </div>
        <div class="banner-item-03">
            <div class="text-content">
                <h4>Last Minute</h4>
                <h2>Grab last minute deals</h2>
            </div>
        </div>
    </div>
</div>
<!-- Banner Ends Here -->

<div class="latest-products">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Latest Products</h2>
                </div>

                <div class="pageSearch">
                    <div class="psLeft">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        <span class="pageCount">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                        </span>
                    </div>
                    <div class="psRight">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                        {
                            <div>
                                <input type="text" name="searchFilter" />
                                <input type="submit" value="Search" class="btn-dark" />
                            </div>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>

                <hr />
            </div>

            @if (Model.PageCount > 0)
            {


                foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product-item">
                            <a href="@Url.Action("Details", "Album", new { id = item.AlbumID })">
                                <img src="~/Content/assets/images/albumImages/@item.AlbumImage" alt="@item.AlbumName cover" title="@item.AlbumName cover" id="albumArt" />
                            </a>
                            <div class="down-content">
                                <a href="@Url.Action("Details", "Album", new { id = item.AlbumID })" style="font-weight:bold; color: black;">
                                    @Html.DisplayFor(modelItem => item.AlbumName)
                                </a>

                                <a href="@Url.Action("Details", "Album", new { id = item.AlbumID })" color: black;">
                                    @foreach (var artist in item.AlbumArtist)
                                    {
                                        if (artist.PrimaryArtist == true)
                                        {
                                            <h2>@artist.Artist.ArtistName</h2>
                                        }
                                    }
                                </a>

                                (@Html.DisplayFor(modelItem => item.Year))


                                @Html.DisplayFor(modelItem => item.Format.FormatType)


                                <h6 class="pull-left">@Html.DisplayFor(modelItem => item.Price)</h6>

                                @using (Html.BeginForm("AddToCart", "Album", new { albumID = item.AlbumID }, FormMethod.Post))
                                {

                                    if (item.UnitsInStock == 0)
                                    {
                                        <div class="pull-right"><input value="Unavailible" class="btn btn-danger" style="width: 120px;" /></div>
                                    }
                                    else
                                    {
                                        @Html.TextBox("qty", 1, new { @class = "form-control", @style = "max-width: 50px; display: none;", onkeyup = "checkQty()" })
                                        <div id="btnSubmit" class="pull-right">
                                            <input type="submit" value="Add To Cart" class="btn btn-dark" />
                                        </div>
                                    }
                                }
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>

                }



            }
            else
            {
                <h4 class="text-danger">Sorry, your search criteria did not return any results.<br /> Please try again or hit "Search" again to refresh.</h4>
            }
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        <hr />
    </div>

</div>

