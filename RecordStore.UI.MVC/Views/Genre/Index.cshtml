@model IEnumerable<RecordStore.Data.EF.Genre>

@{
    ViewBag.Title = "Genres";
}

<div id="rrWrapper">
    <h2>@ViewBag.Title</h2>
    <br />
    <h6>
        @Html.ActionLink("Create a New Genre", "Create")
    </h6>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.GenreID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.GenreID })
                </td>
            </tr>
        }
    </table>
</div>