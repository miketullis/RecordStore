@model RecordStore.Data.EF.Employee

@{
    ViewBag.Title = "Delete Employee: " + Model.FullName;
}
<div id="rrWrapper">
    <div class="max900">
        <h2 class="text-center mb-2">@ViewBag.Title</h2>

        <div class="dl-horizontal mb-3">
            <div class="row text-center mx-auto details">
                <div class="col-md-6 pt-5">
                    <h4>Company Info:</h4>
                    <hr />
                    <div class="font-weight-bold">
                        Department
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Department.DepartmentName)
                    </div>
                    <div class="font-weight-bold">
                        @Html.DisplayNameFor(model => model.Position)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Position)
                    </div>
                    <div class="font-weight-bold">
                        Pay Rate
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.PayRate)
                    </div>
                    <div class="font-weight-bold">
                        @Html.DisplayNameFor(model => model.IsFullTime)
                    </div>
                    <div>
                        @if (Model.IsFullTime == true)
                        {<span>Yes</span>}
                        else
                        { <span>No</span>}
                    </div>
                    <div class="font-weight-bold">
                        Hire Date
                    </div>
                    <div>
                        @{string formattedHire = Model.HireDate.HasValue ? Model.HireDate.Value.ToString("MMMM d, yyyy") : "<not available>"; }
                        @Html.DisplayFor(model => formattedHire)
                    </div>
                    @if (Model.Employee2 != null)
                    {
                        <div class="font-weight-bold">
                            Reports To
                        </div>
                        <div>
                            @Html.DisplayFor(model => model.Employee2.NamePlusPosition)
                        </div>
                    }
                </div>
                <div class="col-md-6 pt-5">
                    <h4>Personal Info:</h4>
                    <hr />
                    <div class="font-weight-bold">
                        @Html.DisplayNameFor(model => model.Address)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Address)<br />
                        @Html.DisplayFor(model => model.City),&nbsp;
                        @Html.DisplayFor(model => model.State)&nbsp;
                        @Html.DisplayFor(model => model.ZipCode)
                    </div>
                    <div class="font-weight-bold">
                        @Html.DisplayNameFor(model => model.Phone)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Phone)
                    </div>
                    <div class="font-weight-bold">
                        @Html.DisplayNameFor(model => model.Birthday)
                    </div>
                    <div>

                        @{string formattedBday = Model.Birthday.HasValue ? Model.Birthday.Value.ToString("MMMM d, yyyy") : "<not available>"; }
                        @Html.DisplayFor(model => formattedBday)
                    </div>
                </div>
            </div>
        </div>

        <h4 class="text-danger text-center mb-4 mt-4">Are you sure you want to delete <span class="font-italic">@Model.FullName</span>?</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center m-auto">
                <input type="submit" value="Yes" class="btn btn-dark" />
                <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-dark">No</a>
                @*@Html.ActionLink("Cancel", "Index", "Employee", null, new { @class = "btn btn-dark" })*@
            </div>
        }
    </div>
</div>
