@model IEnumerable<RecordStore.Data.EF.Employee>

@{
    ViewBag.Title = "Employees";
}

<div id="rrWrapper">
    <h2 class="text-center mb-5">@ViewBag.Title</h2>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th class="text-left">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th class="text-left">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th class="text-center">
                    Department
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.PayRate)
                </th>

                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.HireDate)
                </th>
                <th class="text-right">
                    @Html.ActionLink("Add New Employee", "Create")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.PayRate)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.HireDate)
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
                        @*<a href="" class="EmployDelete">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @* Placeholders for the deleting Employees in a dialog box *@
    <div id="EmployDelete"></div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
