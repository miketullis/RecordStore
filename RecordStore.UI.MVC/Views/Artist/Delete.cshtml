@model RecordStore.Data.EF.Artist

@{
    ViewBag.Title = "Delete Artist: " + Model.ArtistName;
}

<div id="rrWrapper">
    <div class="max700">
        <h2 class="text-center pb-5">@ViewBag.Title</h2>
        <div>
            <dl class="dl-horizontal text-center">
                <dt>
                    @Html.DisplayNameFor(model => model.ArtistName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ArtistName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsStillActive)
                </dt>
                <dd>
                    @if (Model.IsStillActive == true)
                    {<span>Yes</span>}
                    else
                    { <span>No</span>}
                </dd>
            </dl>

            <h4 class="text-danger text-center mb-4">Are you sure you want to delete <span class="font-italic">@Model.ArtistName</span>?</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">
                    <input type="submit" value="Yes" class="btn btn-dark" /> &nbsp;
                    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-dark">No</a>
                    @*@Html.ActionLink("Cancel", "Index", "Artist", null, new { @class = "btn btn-dark" })*@
                </div>
            }
        </div>
    </div>
</div>