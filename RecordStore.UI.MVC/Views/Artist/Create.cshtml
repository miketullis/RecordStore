@model RecordStore.Data.EF.Artist

@{
    ViewBag.Title = "Create A New Artist";
}

<div id="rrWrapper">

    <h2 class="text-center pb-5">@ViewBag.title</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal m-auto">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-7 text-center m-auto">
                    @Html.LabelFor(model => model.ArtistName, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-7 text-center m-auto">
                    @Html.LabelFor(model => model.IsStillActive, htmlAttributes: new { @class = "control-label" })
                    <div class="checkbox">
                        @*@Html.EditorFor(model => model.IsStillActive)*@
                        @Html.CheckBoxFor(model => model.IsStillActive, new { data_toggle = "toggle", data_on = "Yes", data_off = "No" })
                        @Html.ValidationMessageFor(model => model.IsStillActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-7 text-center m-auto pt-2">
                    <input type="submit" value="Create" class="btn btn-dark" />
                    @Html.ActionLink("Cancel", "Index", "Album", null, new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
    }

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
