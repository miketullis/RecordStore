@model RecordStore.Data.EF.Artist

@{
    ViewBag.Title = "Artist Details: " + @Model.ArtistName;
}

<div id="rrWrapper">
    <h2>@ViewBag.Title</h2>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ArtistName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArtistName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsStillActive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsStillActive)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit Artist", "Edit", new { id = Model.ArtistID }, new { @class="btn btn-dark"}) &nbsp;
        @Html.ActionLink("Return to Artists", "Index", "Artist", null, new { @class = "btn btn-dark" })
    </p>
</div>