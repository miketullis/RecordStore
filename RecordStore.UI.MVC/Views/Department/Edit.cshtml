@model RecordStore.Data.EF.Department

@{
    ViewBag.Title = "Edit Department: " + @Model.DepartmentName;
}

<div id="rrWrapper">
    <div class="max700">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.DepartmentID)

                <div class="form-group">
                    <div class="col-md-12 text-center m-auto">
                        @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center m-auto pb-4">
                        @Html.LabelFor(model => model.DeptDescription, htmlAttributes: new { @class = "control-label text-center" })
                        @Html.EditorFor(model => model.DeptDescription, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.DeptDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center m-auto">
                        <input type="submit" value="Save Changes" class="btn btn-dark" />
                        @Html.ActionLink("Delete", "Delete", new { id = Model.DepartmentID }, new { @class = "btn btn-dark" })
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-dark">Cancel</a>
                        @*@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-dark" })*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
