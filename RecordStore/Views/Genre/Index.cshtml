@model IEnumerable<RecordStore.Data.EF.Genre>

@{
    ViewBag.Title = "Music Genres";
}

<div id="rrWrapper">
    <div class="max600">
        <h2 class="text-center mb-5"> @ViewBag.Title</h2>
        @if (Model.Count() > 0)
        {<table class="table" id="myTable">
                <thead>
                    <tr>
                        <th class="text-left">
                            @Html.DisplayNameFor(model => model.GenreName)
                        </th>
                        <th class="text-right">
                            @Html.ActionLink("Add New Genre", "Create")
                        </th>
                    </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.GenreName)
                            </td>
                            <td class="text-right">
                                @Html.ActionLink("Edit", "Edit", new { id = item.GenreID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.GenreID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}